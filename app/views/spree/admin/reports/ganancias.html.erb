<%= javascript_include_tag "highstock.js"%>
<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<div id="container2" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<div id="container3" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<script>

$(function () {
        window.chart = new Highcharts.StockChart({
            chart: {
            	renderTo : 'container',
                zoomType: 'x'
            },
            
            title: {
                text: 'Ganancias Diarias'
            },
            yAxis: {
                min: 0,
                title: {
                    text: '$'
                }
            },
            
            rangeSelector: {
            	buttons: [ {
            	type: 'all',
            	text: 'Reset'
            	}],
                enabled: true,
                inputEnabled:false,
            	inputDateFormat: '%d/%m/%Y',
            	inputEditDateFormat: '%d/%m/%Y',
            	
            },
            
            tooltip: {
                shared: true,
                crosshairs: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: <%=raw @series%>
            
        });
        
        $('#container2').highcharts({
            chart: {
                type: 'column',
                zoomType: 'x'
            },
            title: {
                text: 'Ganancias Clientes TOP 10'
            },
            xAxis: {
                categories: <%=raw @idClientes%>
            },
            yAxis: {
                min: 0,
                title: {
                    text: '$'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: <%=raw @gananciasClientes%>
        });
        $('#container3').highcharts({
            chart: {
                type: 'column',
                zoomType: 'x'
            },
            title: {
                text: 'Ganancias Productos TOP 10'
            },
            xAxis: {
                categories: <%=raw @skuProductos%>
            },
            yAxis: {
                min: 0,
                title: {
                    text: '$'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: <%=raw @gananciasProductos%>
        });
    });
</script>
